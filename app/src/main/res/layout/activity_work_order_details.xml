<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/work_order_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Work Order Number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/customer_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/service_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Type"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/scheduled_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scheduled Date"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/created_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created Date"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/assigned_to_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assigned To"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

</LinearLayout> 